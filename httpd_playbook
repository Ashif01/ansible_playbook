- hosts: tester
  remote_user: ec2-user
  become: yes
  tasks:
  - name: install the httpd applocation
    yum:
      name: httpd
      state: present
  - name: start the httpd application
    service:
      name: httpd
      state: started
  - name: copy the files from source to destination
    copy:
      src: /home/ec2-user/index.html
      dest: /var/www/html/index.html
